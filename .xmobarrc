Config { font = "xft:inconsolata:size=12:bold:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , border = NoBorder
       , borderColor = "black"
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %b %_d %l:%M %p" "date" 10
                    , Run StdinReader
                    , Run PipeReader "/tmp/.layout" "layout"
                    , Run PipeReader "/tmp/.volume" "sound"
                    , Run BatteryP ["BAT0", "BAT1"]
                      ["-t", "<acstatus>, <timeleft> (<left>%)", "-l", "red", "-h", "green"] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% * %swap% | Vol: %sound% | %battery% | %layout% | <fc=#ee9a00>%date%</fc>"
       }
