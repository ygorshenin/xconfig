#!/bin/bash

STYLE=Chromium
case $# in
  1) STYLE="$1" ;;
  *) ;;
esac

r() {
  9p read acme/$winid/$1
}

w() {
  9p write acme/$winid/$1
}

tmp=/tmp/F.$$
trap "rm -f $tmp" 0 1 2 15

echo -n 'addr=dot' | w ctl
if r xdata | clang-format -style "$STYLE" >$tmp
then
  echo -n 'addr=dot' | w ctl
  if ! r xdata | cmp /dev/stdin $tmp >/dev/null 2>&1
  then
    echo -n 'addr=dot' | w ctl
    w data <$tmp
  fi
fi

