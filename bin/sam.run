#!/bin/bash

if [ -z "${PLAN9+defined}" ]
then
    echo "PLAN9 variable is not set, exiting." 2>&1
    exit -1
fi

if [ ! -x "$PLAN9/bin/plumber" ]
then
    echo "Can't find plumber, exiting." 2>&1
    exit -1
fi

export font=${font-"/mnt/font/Inconsolata/18a/font"}
$PLAN9/bin/plumber 1>/dev/null 2>&1
PATH=$PATH:$HOME/bin/sam:$PLAN9/bin $HOME/bin/sam exec sam -a "$@"
