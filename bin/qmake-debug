#!/bin/bash

if [ -z ${QMAKE:-} ]
then
    QMAKE=$(which qmake)
fi

SPEC=${SPEC:-linux-clang-libc++}

set -e -x
case "$SPEC" in
     linux*) "$QMAKE" \
                 -spec "$SPEC" \
                 CONFIG+=debug \
                 DEFINES+=USE_GOOGLE_PROFILER \
                 QMAKE_LFLAGS*="$LFLAGS" \
                 "$@"
             ;;
          *) "$QMAKE" -spec "$SPEC" CONFIG+=debug "$@"
             ;;
esac
